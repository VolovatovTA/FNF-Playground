<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:theme="@style/ThemeOverlay.FNFPlayground.FullscreenContainer"
    tools:context=".FullscreenFragmentChooseCharacter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:background="@drawable/stageback"
        >

        <TextView
            android:id="@+id/twOfficialChar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/vtc_garage_sale_outlined"
            android:lines="2"
            android:text="Official\n characters"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="55sp" />
        <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
            android:id="@+id/coverFlowOfficialCharacters"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"


            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:background="@drawable/stageback"

        android:layout_weight="1">
        <TextView
            android:id="@+id/twModChar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/vtc_garage_sale_outlined"
            android:lines="2"
            android:text="Mod\n characters"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="55sp" />
        <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
            android:id="@+id/coverFlowModCharacters"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            />
    </LinearLayout>






</LinearLayout>