<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/stageback"
    tools:context=".fragments.SettingsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewMusicVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vcr"
                android:textSize="25sp"
                android:layout_margin="16dp"
                android:textColor="@color/white"

                android:text="music volume" />

            <SeekBar
                android:id="@+id/seekBarMusicVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"

                />

            <TextView
                android:id="@+id/textViewSoundsVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vcr"
                android:textSize="25sp"
                android:layout_margin="16dp"
                android:textColor="@color/white"
                android:text="sounds of buttons volume" />

            <SeekBar
                android:id="@+id/seekBarSoundsVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="@integer/max_volume"
                android:layout_margin="16dp"/>

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/imageButtonBack"
        android:soundEffectsEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:layout_gravity="left"
        android:scaleType="fitStart"
        android:background="#0000"
        android:src="@drawable/back_btn" />
</LinearLayout>