<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:theme="@style/ThemeOverlay.FNFPlayground.FullscreenContainer"
    tools:context=".FullscreenFragmentChooseCharacter">

    <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
        android:id="@+id/coverFlowOfficialCharacters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"

        android:background="@drawable/stageback"
        android:layout_weight="1"
        />
    <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
        android:id="@+id/coverFlowModCharacters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stageback"
        android:layout_margin="8dp"
        android:layout_weight="1"

        />

</LinearLayout>